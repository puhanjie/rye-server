<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.puhj.rye.mapper.FileMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.puhj.rye.entity.File">
        <id column="id" property="id"/>
        <result column="path" property="path"/>
        <result column="name" property="name"/>
        <result column="file_size" property="fileSize"/>
        <result column="uuid" property="uuid"/>
        <result column="upload_user" property="uploadUser"/>
        <result column="delete_user" property="deleteUser"/>
        <result column="upload_time" property="uploadTime"/>
        <result column="delete_time" property="deleteTime"/>
    </resultMap>

    <update id="deleteByPath">
        update file
        set delete_user=#{userId},
            delete_time = now()
        where path = #{path}
    </update>
</mapper>
